<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.faiz.udacityexamples.Main2Activity">


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"

        android:hint="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:text="Toopings"


        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/checkBoxwhip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:layout_marginTop="10dp"
        android:text="Whipped Cream" />

    <CheckBox
        android:id="@+id/checkBoxChoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"


        android:text="Chocolate" />

    <TextView
        android:id="@+id/quantity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Quantity"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDec"
            android:layout_width="48dp"
            android:layout_height="48dp"


            android:layout_below="@+id/quantity_textview"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/btnorder"
            android:layout_toRightOf="@+id/btnorder"
            android:layout_weight="0.37"
            android:onClick="Decreament"
            android:text="-" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_weight="3.44"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnInc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"

            android:onClick="Increament"
            android:text="+" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnInc"
        android:layout_alignRight="@+id/btnInc"
        android:layout_below="@+id/btnInc"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Order Summery"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/customName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="New Text"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textwhip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="New Text"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textchoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="New Text"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/quatityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="New Text"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_price"

        android:layout_marginLeft="30dp"
        android:text="$"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="New Text"
        android:textColor="#000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.27"
        android:onClick="orderNow"
        android:text="Order" />


</LinearLayout>
</ScrollView>