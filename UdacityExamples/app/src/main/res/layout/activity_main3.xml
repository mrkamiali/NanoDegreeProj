<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/rm"
    android:orientation="horizontal"
    tools:context="com.example.faiz.udacityexamples.Main3Activity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_teamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="Team A"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#616161"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/teamAscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="0"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="56sp" />


        <Button
            android:id="@+id/btn3teamA"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:background="#313987"
            android:onClick="addthreepointsTeamA"
            android:text="+3 Points"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn2teamA"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"

            android:layout_marginLeft="12dp"
            android:background="#313987"
            android:onClick="addtwoPointsTeamA"
            android:text="+2 Points"
            android:textColor="#fff" />

        <Button
            android:id="@+id/free_throwA"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="#313987"
            android:onClick="freeThrowTeamA"
            android:text="Free Throw"
            android:textColor="#fff" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#313987"
        android:onClick="resetScore"
        android:text="Reset"

        android:textColor="#fff" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/textView_teamB"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="Team B"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#616161"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/teamBscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="0"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="56sp" />

        <Button
            android:id="@+id/btn3teamB"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"

            android:background="#313987"
            android:onClick="addthreepointsTeamB"
            android:text="+3 Points"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn2teamB"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:layout_marginBottom="13dp"
            android:layout_marginRight="20dp"
            android:background="#313987"
            android:onClick="addtwoPointsTeamB"
            android:text="+2 Points"
            android:textColor="#fff" />

        <Button
            android:id="@+id/free_throwB"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:background="#313987"
            android:onClick="freeThrowTeamB"
            android:text="Free Throw"
            android:textColor="#fff" />


    </LinearLayout>

</LinearLayout>
